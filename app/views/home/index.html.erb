<h1> Welcome to Sayali's Blog Application </h1>

<% if !@posts.present? %>
 <p> Sorry there is no Post created yet.</p>
 <span>Click here <%= link_to 'Create Post', new_post_path %> to create your first Post </span>
<% else %>
 <% @posts.each do |post|%>
    <ul>
      <li><%= link_to post.title, post_path(post)%></li>
      <% if post.user == current_user %>
    <%= link_to 'Edit Post', edit_post_path(post)%>
    <%= link_to 'Delete Post', post_path(post), method: :delete,data: {confirm: "Are you sure??"} %>
<% end %>
    </ul>
  <% end %>
<% end %>